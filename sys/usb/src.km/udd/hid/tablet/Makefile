#
# Makefile for tablet
#

SHELL = /bin/sh
SUBDIRS =

srcdir = .
top_srcdir = ../../../../..
subdir = tablet
toscommon_srcdir = ../../../tos-common
hidcommon_srcdir = ../hid-common

default: help

# Disable built-in rules
MAKEFLAGS += --no-builtin-rules
.SUFFIXES:

include $(top_srcdir)/CONFIGVARS
include $(top_srcdir)/RULES
include $(top_srcdir)/PHONY

include $(srcdir)/TABLETDEFS
include $(srcdir)/../../../STRIPEXDEFS

all-here: all-targets

# default overwrites
DEFINITIONS = -D__KERNEL_MODULE__ -DMODULE_NAME=tablet $(USBDEFS)
INCLUDES += -I$(top_srcdir)/../../sys
WARN += -Wcast-qual

# default definitions
compile_all_dirs = .compile_*
GENFILES = $(compile_all_dirs) *.udd *.prg

GENFILES += crtinit.c entry.S hid.c hid.h hidparse.c hidparse.h setstack.S

help:
	@echo '#'
	@echo '# targets:'
	@echo '# --------'
	@echo '# - all'
	@echo '# - $(tablettargets)'
	@echo '#'
	@echo '# - clean'
	@echo '# - distclean'
	@echo '# - bakclean'
	@echo '# - strip'
	@echo '# - help'
	@echo '#'

ALL_TARGETS = $(foreach TARGET, $(tablettargets), .compile_$(TARGET)/$(UDDTARGET_$(TARGET)))

STRIPFLAGS =
strip:
	$(STRIP) $(ALL_TARGETS)

all-targets: $(ALL_TARGETS)

# Link common TOS files
crtinit.c: $(toscommon_srcdir)/crtinit.c
	ln -sf $< $(srcdir)/$@
entry.S: $(toscommon_srcdir)/entry.S
	ln -sf $< $(srcdir)/$@
setstack.S: $(toscommon_srcdir)/setstack.S
	ln -sf $< $(srcdir)/$@

#
# multi target stuff
#

LD = $(CC) $(LDEXTRA)

# for HDDRIVER modules to work, TOSCOBJS must be first in OBJS
OBJS_prg = $(foreach OBJ, $(notdir $(basename $(TOSCOBJS))), .compile_prg/$(OBJ).o)

define TARGET_TEMPLATE

LIBKERN_NAME_$(1) = kern$$(CPU_$(1))
LIBKERN_DEP_$(1) = $(top_srcdir)/libkern/lib$$(LIBKERN_NAME_$(1)).a
LIBKERN_$(1) = -L$(top_srcdir)/libkern -l$$(LIBKERN_NAME_$(1))
DEFINITIONS_$(1) = $(DEFINITIONS) $$(USBDEFS_$(1))
LIBS_$(1) = $$(LIBKERN_$(1)) -lgcc -lgem
OBJS_$(1) += $(foreach OBJ, $(notdir $(basename $(COBJS))), .compile_$(1)/$(OBJ).o)
$$(OBJS_$(1)): TABLETDEFS

$(1): $(addprefix .compile_,$(1))/$(UDDTARGET_$(1))

$(addprefix .compile_,$(1))/$(UDDTARGET_$(1)): $$(OBJS_$(1)) $$(LIBKERN_DEP_$(1)) $(STRIPEX)
	$(LD) $$(LDEXTRA_$(1)) -o $$@ $$(CFLAGS_$$(CPU_$(1))) $$(OBJS_$(1)) $$(LIBS_$(1))
	@case $$@ in *.prg) echo $(STRIPEX) $$@; $(STRIPEX) $$@; ;; esac

endef

define LIBKERN_TEMPLATE
$(top_srcdir)/libkern/libkern$(1).a:
	$(MAKE) -C $(top_srcdir)/libkern CPU="$(1)" libkern$(1).a
endef

$(foreach TARGET,$(tablettargets),$(eval $(call TARGET_TEMPLATE,$(TARGET))))

$(foreach TARGET,$(tablettargets),$(foreach OBJ,$(COBJS) $(TOSCOBJS),$(eval $(call CC_TEMPLATE,$(TARGET),$(OBJ)))))

$(foreach TARGET,$(cputargets),$(eval $(call LIBKERN_TEMPLATE,$(TARGET))))

ifneq (clean,$(findstring clean,$(MAKECMDGOALS)))
DEPS_MAGIC := $(shell mkdir -p $(addsuffix /.deps,$(addprefix .compile_,$(tablettargets))) > /dev/null 2>&1 || :)
endif
