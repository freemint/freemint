#
# debug flags
#
# -DDEV_DEBUG		include debugging information


ifeq ($(mouse),deb)
TARGET = mouse.udd
CPU = 020-60
USBDEFS += -DDEV_DEBUG
LDEXTRA = -nostdlib -Wl,--entry -Wl,_init
endif

ifeq ($(mouse),prg)
TARGET = mouse.prg
CPU = 000
USBDEFS += -DTOSONLY -fno-builtin
LDEXTRA = -nostdlib -Wl,--entry -Wl,__start
endif

ifeq ($(mouse),000)
TARGET = mouse.udd
CPU = 000
USBDEFS +=
LDEXTRA = -nostdlib -Wl,--entry -Wl,_init
endif

ifeq ($(mouse),02060)
TARGET = mouse.udd
CPU = 020-60
USBDEFS +=
LDEXTRA = -nostdlib -Wl,--entry -Wl,_init
endif

ifeq ($(mouse),col)
TARGET = mouse.udd
CPU  = v4e
USBDEFS += -DCOLDFIRE
LDEXTRA = -nostdlib -Wl,--entry -Wl,_init
endif

#
# all default targets
#
mousetargets = deb prg 000 02060 col
