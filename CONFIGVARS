# 
# 
# cross compiling
#CROSS = yes
CROSS = no

#
# target and host compiler
# 
ifeq ($(CROSS),yes)

CROSSPREFIX=m68k-atari-mint-

NATIVECC = gcc
NATIVECFLAGS = -O

else

CROSSPREFIX=

NATIVECC = gcc
NATIVECFLAGS = -O

endif

CC = $(CROSSPREFIX)gcc
AS = $(CC)
AR = $(CROSSPREFIX)ar
RANLIB = $(CROSSPREFIX)ranlib
STRIP = $(CROSSPREFIX)strip
FLAGS = $(CROSSPREFIX)flags

# 
# some tools
# 
YACC  = bison -dk
LEX   = flex
MV    = mv
CP    = cp
RM    = rm -f
TOUCH = touch
MKDIR = mkdir
MAKE  = make
SED   = sed
CRLF  = crlf -s


#
# optimizations
# 
OPTS = -O2 -fomit-frame-pointer


#
# warning options
#
WARN = \
	-Wall \
	-Wmissing-prototypes \
	-Winline \
	-Wshadow \
	-Wpointer-arith \
	-Wcast-qual \
	-Waggregate-return

